/* 热点精选部分 */
.hot{
    padding: 0px;
    /* height: 500px !important; */
    /* height: 300px !important; */
    /* height: auto; */
}
.hot .hot-top{
    display: flex;
    justify-content: space-between;
    padding: 20px 0 0 20px;
}
.hot .hot-top image{
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 10px;
}
.hot .hot-top .hot-name{
    font-size: 18px;
}
.hot .hot-top .findMore{
    font-size: 16px;
    color: gray;
    vertical-align: middle;
}
.hot .hot-top .findMore image{
    margin-left: 10px;
}
/* 轮播 */
.hot .carousel{
    display: flex;
    height: auto;
    /* height: 200px; */
    margin-top: 20px;
    overflow:auto;
    position: relative;
}
.hot .carousel view{
    width: 80%;
    /* height: 100%; */
    margin: 0px 5px;
}
.hot .carousel view image{
    height: 200px;
    border-radius: 5%;
}
.hot .carousel .carousel-text{
    width: 100%;
    color: #fff;
    margin: 5px;
    position: absolute;
    top:110px;
    left: 0;
}
.hot .carousel .carousel-text .carousel-title{
    height: auto;
}