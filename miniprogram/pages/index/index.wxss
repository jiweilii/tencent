}
.total .rest .title{
    font-size: 20px;
    line-height: 30px;
}
.total .rest .content{
    margin-top: 10px;
    font-size: 16px;
    line-height: 26px;
    max-height:78px;
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
.total .rest .action{
    display:flex;
    margin-right: 0;
    justify-content:space-between;
    margin-top: 10px;

}
.total .rest .action view{
    width: 80px;
    height: 20px;
    font-size: 16px;
}
.total .rest .action view image{
    width: 20px;
    height: 20px;
    vertical-align: middle;
}
.total .rest .action view text{
    vertical-align: middle;
    padding-left: 10px;
}
